page {
  background-color: #fbf9fe;
  height: 100%;
}

.page__hd {
  padding: 50rpx 50rpx 100rpx 50rpx;
  text-align: center;
}

.page__title {
  display: inline-block;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #aaa;
  border-bottom: 1px solid #ccc;
}

.page__desc {
  display: none;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #bbb;
}

.section {
  margin: 16rpx;
}

.section__title {
  margin-bottom: 16rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.picker {
  padding: 26rpx;
  background-color: #fff;
}

.label-1, .label-2 {
  margin-bottom: 15px;
}

.label-1__text, .label-2__text {
  display: inline-block;
  vertical-align: middle;
}

.label-1__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
}

.label-1__icon-checked {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
}

.label-2__icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 18px;
  height: 18px;
  background: #fcfff4;
  border-radius: 50px;
}

.label-2__icon-checked {
  position: absolute;
  left: 3px;
  top: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
  border-radius: 50%;
}

.label-4_text {
  text-align: center;
  margin-top: 15px;
}

/*表格样式开始  */

.table {
  border: 0px solid darkgray;
  padding-top:2rem;
  padding-bottom:18rem;

}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.td {
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: #b0c4de;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  justify-content: center;
  background: #39b5de;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}

/*表格样式结束  */

/*悬浮  */

.xuanfub {
  left: 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  background: #e6e6e6;
}
.xuanfut {
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  background: #e6e6e6;
}
